<div class="text-center">
  <h1><strong><%= @user.name %></strong></h1>
  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
    <p class="buffer-top"><%= link_to t('users.edit.edit_profile'), edit_user_path(@user), class: 'btn btn-info' %></p>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3>Организовал:</h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top"><%= t('.no_events_yet') %></p>
    <% end %>
  </div>
</div>


